<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             xmlns:rootViewModel="clr-namespace:Aurum.Micro.ViewModels;assembly=Aurum.Micro"
             d:DataContext="{d:DesignInstance rootViewModel:AddConnectionViewModel}"
             x:Class="Aurum.Micro.Views.AddConnectionView">
    <DockPanel>
        <StackPanel Orientation="Horizontal" DockPanel.Dock="Bottom" HorizontalAlignment="Center">
            <Button DockPanel.Dock="Bottom" 
                    Command="{Binding Ok}">OK</Button>
            <Button DockPanel.Dock="Bottom" Command="{Binding Cancel}">Cancel</Button>
        </StackPanel>
        <TextBox AcceptsReturn="False"
                 Text="{Binding Name}"
                 Watermark="Connection Name"/>
    </DockPanel>
</UserControl>
